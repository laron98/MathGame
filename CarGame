            <?php 
                $correct = 0;
                $question = 0;
                $ans = null;
                $op = rand(0,1); 
                if($op == 0){
                    $ran1 = rand(0,99); 
                    $ran2 = rand(0, 99); 
                    $sum = $ran1 + $ran2;
                    echo "<h1> $ran1 + $ran2</h1>"; 
                } else{
                    $ran1 = rand(0,99); 
                    $ran2 = rand(0, 99); 
                    if ($ran1 > $ran2){
                        $sum = $ran1 - $ran2;
                        echo "<h1> $ran1 - $ran2</h1>"; 
                    } else{
                        $sum = $ran2 - $ran1;
                        echo "<h1> $ran2 - $ran1</h1>";
                    }
                }
            ?>
            <form action = "CarGame.php" method = "get">
                Answer: <input type = "text" name = "ans"/>
                <input type = "submit">
            </form>
            <?php
                //var_dump($_GET);
                if (isset($_GET["ans"])){
                    $ans = $_GET["ans"]; 
                    echo $ans;
                    $ansArray = array();
                    if($sum == $ans){
                        echo "<h3> $ans correct </h3>";
                        $correct = $correct + 1;
                        $ansArray [$question] = "$ans correct";
                        $question = $question + 1;
                        echo $question;
                    }
                    else {
                        echo "<h3> $ans wrong </h3>";
                        $ansArray [$question] = "$ans wrong";
                        $question = $question + 1;
                        echo $question;
                    }
                }
                // var_dump($ansArray);
            ?>
